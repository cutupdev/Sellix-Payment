{
  "name": "node-express-backend-boilerpate",
  "version": "1.0.0",
  "description": "This boilerplate provides a foundation for building a Node.js backend server using Express. It includes user authentication features such as user signup and signin. Additionally, it is designed to seamlessly deploy on Vercel for easy scalability and hosting.",
  "main": "index.ts",
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "scripts": {
    "dev": "ts-node-dev index.ts",
    "start": "ts-node index.ts",
    "ts.check": "tsc --project tsconfig.json",
    "build": "tsc --build",
    "add-build": "git add dist"
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.4",
    "@types/bs58": "^4.0.4",
    "@types/joi": "^17.2.3",
    "@types/nodemailer": "^6.4.15",
    "axios": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "braces": "3.0.3",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "crypto": "^1.0.1",
    "express": "^4.19.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.0.1",
    "js-base64": "^3.7.5",
    "jsonwebtoken": "^9.0.2",
    "log4js": "^6.9.1",
    "mongoose": "^8.0.1",
    "nodemailer": "^6.9.13",
    "nodemon": "^3.0.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pre-commit": "^1.2.2",
    "tweetnacl": "^1.0.3",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/base-64": "^1.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.16",
    "@types/cron": "^2.4.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}
